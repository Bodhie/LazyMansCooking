<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Office">

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_recipe"
            android:textAlignment="center"
            android:textSize="40dp"/>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/viewName"
                android:text="@string/recipe_name"
                android:layout_weight="0.3"/>
            <EditText
                android:id="@+id/txtTitle"
                android:hint="@string/insert_recipe_name"
                android:inputType="textPersonName"
                android:layout_weight="0.7"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/viewDescription"
                android:text="@string/recipe_description"
                android:layout_weight="0.3"/>
            <EditText
                android:id="@+id/txtDescription"
                android:hint="@string/insert_description"
                android:layout_weight="0.7"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/viewImage"
                android:text="@string/recipe_image"
                android:inputType="textPersonName"
                android:layout_weight="0.3"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxHeight="200dp"
                android:src="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/btn_pick"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/recipe_image" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/viewIngredients"
                android:text="@string/ingredients"
                android:inputType="textPersonName"
                android:layout_weight="0.3"/>
            <ListView
                android:id="@+id/listViewIngredients"
                android:layout_weight="0.7"/>
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnAddRecipe"
                android:text="@string/add"
                android:layout_span="2"
                android:onClick="addRecipe"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
